FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod* ./

# Copy source code
COPY . .

# Build the cleanup service
RUN CGO_ENABLED=0 GOOS=linux go build -o /cleanup ./cmd/cleanup

FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /root/

COPY --from=builder /cleanup .

CMD ["./cleanup"]
