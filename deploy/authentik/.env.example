# Authentik Configuration
# Copy this file to .env and fill in your values

# PostgreSQL Database
PG_PASS=<generate-a-secure-password>
PG_USER=authentik
PG_DB=authentik

# Authentik Secret Key (generate with: openssl rand -base64 60)
AUTHENTIK_SECRET_KEY=<generate-with-openssl-rand-base64-60>

# Authentik Version
AUTHENTIK_TAG=2024.8.3

# HTTP/HTTPS Ports
# These are the ports Authentik will listen on
# Put a reverse proxy (Traefik/Nginx) in front for TLS
AUTHENTIK_PORT_HTTP=9000
AUTHENTIK_PORT_HTTPS=9443

# Error Reporting (set to true if you want to help Authentik development)
AUTHENTIK_ERROR_REPORTING=false

# Email Configuration (Optional - for password resets, notifications)
# Leave empty to skip email setup initially
AUTHENTIK_EMAIL_HOST=smtp.example.com
AUTHENTIK_EMAIL_PORT=587
AUTHENTIK_EMAIL_USERNAME=authentik@example.com
AUTHENTIK_EMAIL_PASSWORD=your-email-password
AUTHENTIK_EMAIL_USE_TLS=true
AUTHENTIK_EMAIL_USE_SSL=false
AUTHENTIK_EMAIL_FROM=authentik@example.com

# Domain Configuration
# This should match your dynipupdate COMBINED_DOMAIN or TOP_LEVEL_DOMAIN
# Example: auth.example.com
AUTHENTIK_DOMAIN=auth.example.com
